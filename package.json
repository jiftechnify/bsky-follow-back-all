{
  "name": "npm-package-template-esm",
  "version": "0.1.0",
  "description": "npm package template (ES Modules)",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "repository": "",
  "author": "",
  "license": "",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "tsc": "tsc",
    "lint": "run-p tsc lint:*",
    "lint:format": "prettier --check --loglevel warn src/**/*.ts",
    "lint:js": "eslint --max-warnings 0 src/",
    "fix": "run-s fix:*",
    "fix:format": "prettier --write --loglevel warn src/**/*.ts",
    "fix:js": "eslint --fix src/",
    "build": "npm-run-all tsc -p build:*",
    "build:modules": "node build.js",
    "build:types": "tsc -p tsconfig.build.json",
    "exec-ts": "node --loader esbuild-register/loader -r esbuild-register"
  },
  "devDependencies": {
    "@tsconfig/strictest": "^1.0.1",
    "@typescript-eslint/eslint-plugin": "^5.30.0",
    "@typescript-eslint/parser": "^5.30.4",
    "esbuild": "^0.17.5",
    "esbuild-register": "^3.3.3",
    "eslint": "^8.18.0",
    "eslint-config-prettier": "^8.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.7.1",
    "typescript": "^4.9.4"
  }
}
